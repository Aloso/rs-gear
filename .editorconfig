root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
tab_width = 4
indent_style = space
insert_final_newline = true
max_line_length = off

[{*.ats,*.ts}]
indent_size = 2
tab_width = 2
max_line_length = 120

[{*.sht,*.htm,*.html,*.shtm,*.shtml,*.ng}]
indent_size = 2
tab_width = 2
max_line_length = 120

[{*.yml,*.yaml}]
indent_size = 2
tab_width = 2

[{composer.lock,.eslintrc,.babelrc,jest.config,.stylelintrc,*.bowerrc,*.jsb3,*.jsb2,*.json}]
indent_size = 2
tab_width = 2
